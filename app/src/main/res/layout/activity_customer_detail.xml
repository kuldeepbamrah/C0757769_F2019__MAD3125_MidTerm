<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activities.CustomerDetailActivity">

    <TextView
        android:id="@+id/detailtext"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAlignment="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Detail of Customer"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Customer ID"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

        <TextView
            android:id="@+id/textEmpID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Customer ID"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

        <TextView
            android:id="@+id/textEmpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Customer Name"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:text="Customer Age"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

        <TextView
            android:id="@+id/textEmpAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Customer Age"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Customer E-mail"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

        <TextView
            android:id="@+id/textEmpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="Customer E-mail"
            android:textSize="15dp"
            android:padding="10dp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/detailtext1"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif-black"
        android:text="List of Customer's Bills"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />


    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/recycler_vehicle"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:background="@android:color/background_light">

    </androidx.recyclerview.widget.RecyclerView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_action_add"
                app:layout_anchor="@id/bottom_app_bar" />

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:backgroundTint="@color/colorPrimary"
                app:fabAlignmentMode="center" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>




</LinearLayout>